extends layout

block content
  html
  body
    .container
      header
        h1
          |  Event Adding Form 
        ul.errors
         if errors
          each error,i in errors
           li.alert.alert-danger #{error.msg} 
      section
        #container
            #login.form
              form(method='post', action='/users/events')
                
                p
                 .form-group
                  label Date
                  input.form-control(name='date',type='date',placeholder='Enter Event Date')
                p
                 .form-group
                  label Time
                  input.form-control(name='time',type='text',placeholder='Enter Event Time')
                p
                 .form-group
                  label Your Event Name
                  input.form-control(name='ename',type='text',placeholder='Enter EventName')
                p
                  .form-group
                   label  Details 
                   input.form-control(name='details', type='text', placeholder='description')
                
                input.btn.btn-primary(type='submit',name='submit',value='Add')